@model List<MyPortfolio.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Projelerim Sayfası</h2>
<table>
    <tr>
        <th>#</th>
        <th>Proje Adı</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>GitHub'da Gör</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ProjectID</td>
                    <td>@item.Title</td>
                    <td>@item.Category.CategoryName</td>
                    <td><a href="/Project/DeletedProject/"@item.ProjectID class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Project/UpdatedProject/"@item.ProjectID class="btn btn-outline-success">Güncelle</a></td>
                    <td><a href="/Project/GitHubProject/"@item.ProjectID class="btn btn-outline-warning">GitHub</a></td>

                </tr>
            }
</table>

